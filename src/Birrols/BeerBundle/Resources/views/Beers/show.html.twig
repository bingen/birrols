{% extends '::base.html.twig' %}

{% block body %}

<h3>Beers</h3>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Abv</th>
            <td>{{ entity.abv }}</td>
        </tr>
        <tr>
            <th>Ibu</th>
            <td>{{ entity.ibu }}</td>
        </tr>
        <tr>
            <th>Og</th>
            <td>{{ entity.og }}</td>
        </tr>
        <tr>
            <th>Srm</th>
            <td>{{ entity.srm }}</td>
        </tr>
        <tr>
            <th>Ebc</th>
            <td>{{ entity.ebc }}</td>
        </tr>
        <tr>
            <th>Malts</th>
            <td>{{ entity.malts }}</td>
        </tr>
        <tr>
            <th>Hops</th>
            <td>{{ entity.hops }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Score</th>
            <td>{{ entity.score }}</td>
        </tr>
        <tr>
            <th>Imagepath</th>
            <td>{{ entity.imagePath }}</td>
        </tr>
        <tr>
            <th>Imageupdate</th>
            <td>{{ entity.imageUpdate }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('beers') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('beers_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('beers_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}