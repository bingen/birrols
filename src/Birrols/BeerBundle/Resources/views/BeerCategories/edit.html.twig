{% extends '::base.html.twig' %}

{% block body %}

<h3>BeerCategories edit</h3>

<form action="{{ path('beercategories_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('beercategories') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('beercategories_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}
